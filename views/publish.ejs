<%- include header %>

<div class="container my-3" style="width: 60%">
    <form method="post">
        <div class="form-group row">
            <label class="col-2 col-form-label" for="post-section">Section：</label>
            <div class="col-10">
                <select class="custom-select" name="section" id="post-section">
                    <option selected>Choose the section</option>
                    <option value="cfd">CFD</option>
                    <option value="openfoam">OpenFoam</option>
                    <option value="softwares">Softwares</option>
                </select>
            </div>
        </div>
        <div class="form-group row" id="form-group-menuIndex">
            <label class="col-2 col-form-label" for="menuIndex">Menu :</label>
            <div class="col-10">
                <select class="custom-select" name="menuIndex" id="menuIndex">
                    <option selected>Choose the menu</option>
                    <!--cfd menu-->
                    <% menuItemsCfd.forEach(function(menuItemCfd){ %>
                    <option class="menuItemCfd" value="<%- menuItemCfd.index %>"><%- menuItemCfd.title %></option>
                    <% }); %>
                    <!--openfoam menu-->
                    <% menuItemsOpenfoam.forEach(function(menuItemFoam){ %>
                    <option class="menuItemOpenfoam" value="<%- menuItemFoam.index %>"><%- menuItemFoam.title %></option>
                    <% }); %>
                </select>
            </div>
        </div>
        <div class="form-group row" id="form-group-index">
            <label class="col-2 col-form-label" for="post-index">Index：</label>
            <div class="col-10">
                <input type="text" class="form-control" name="index" id="post-index"
                       placeholder="examples: 1, 2, ...">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label" for="post-title">标题</label>
            <div class="col-10">
                <input class="form-control" type="text" name="title" id="post-title">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label" for="post-file">正文:</label>
            <div class="col-3">
                <input type="file" name="postFile" class="form-control-file" id="post-file">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label" for="post-img">Insert</label>
            <div class="col-3 ">
                <input type="file" name="post-img" class="form-control-file" id="post-img">
            </div>
        </div>

        <div class="form-group">
            <textarea class="form-control" name="content" id="post-content" rows="10"></textarea>
        </div>
        <button type="submit" class="btn btn-info">发表</button>
    </form>
</div>

<%- include footer %>

<script src="js/publish.js"></script>

<%- include('script') %>