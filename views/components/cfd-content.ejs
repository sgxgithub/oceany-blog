<div class="container">
    <div class="row">
        <div>
            <% posts.forEach(function (post) { %>
            <div>
                <h3><a href="/cfd/<%= post._id %>"><%- post.title %></a></h3>
                <p><%- post.author.name %></p>
                <p><%- post.content %></p>
                <span>浏览(<%= post.pv %>)</span>
            </div>
            <% }) %>
        </div>
    </div>
</div>