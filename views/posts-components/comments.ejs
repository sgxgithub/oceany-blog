<div class="comments">
    <div class="comments-content">
        <% comments.forEach(function (comment) { %>
        <div class="comment-content">
            <div class="media my-1">
                <!--<div class="d-flex align-self-start mr-3 media-img-container">-->
                <div class="d-flex align-self-start mr-3 media-img-container">
                    <img class="mx-auto rounded-circle" src="<%= comment.author.avatar %>" alt="avatar">
                </div>
                <div class="media-body">
                    <h5>
                        <a href="#"><%- comment.author.name %></a>
                        <small class="text-muted"> <%- comment.created_at %></small>
                    </h5>
                    <div>
                        <%- comment.content %>
                    </div>
                    <div>
                        <% if (user && comment.author._id && user._id.toString() === comment.author._id.toString()) { %>
                        <a href="" data-href="/posts/<%= section %>/<%= post._id %>/comments/<%= comment._id %>/delete" data-toggle="modal"
                           data-target="#confirm-delete">
                            <span class="fa fa-remove"> 删除</span>
                        </a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <hr class="my-3">
        <% }) %>

        <% if (user) { %>
        <div class="card card-block bg-faded my-3">
            <h5 class="card-title">
                <i class="fa fa-pencil" aria-hidden="true"></i> Leave a comment
            </h5>
            <form method="post" action="/posts/<%= section %>/<%= post._id %>/comment">
                <div class="form-group">
                    <textarea class="form-control" name="content" placeholder="support markdown format here..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary">留言</button>
            </form>
        </div>
        <% } %>
    </div>
</div>