<div class="form-group row" id="form-group-menuIndex">
    <label class="col-2 col-form-label" for="menuIndex">Menu :</label>
    <div class="col-10">
        <select class="custom-select" name="menuIndex" id="menuIndex">
            <option selected>Choose the menu</option>
            <!--menu-->
            <% menuItems.forEach(function(menuItem){ %>
            <option class="menuItem menuItemOpenfoam"
                    value="<%- menuItem.index %>"><%- menuItem.title %></option>
            <% }); %>
        </select>
    </div>
</div>

