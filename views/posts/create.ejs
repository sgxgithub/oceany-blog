<%- include('../components/header') %>

<link href="/stylesheets/posts/create.css" rel="stylesheet">

<div class="container my-3" style="width: 60%">
    <form method="post">
        <div class="form-group row">
            <label class="col-2 col-form-label" for="post-section">Section：</label>
            <div class="col-10">
                <select class="custom-select" name="section" id="post-section">
                    <option selected>Choose the section</option>
                    <option value="openfoam">OpenFoam</option>
                    <option value="nemoh">NemoH</option>
                    <option value="hos">HOS</option>
                    <option value="palabos">Palabos</option>
                    <option value="openlb">Openlb</option>
                    <option value="reef3d">REEF-3D</option>
                    <option value="fluidty">FLUIDTY</option>
                    <option value="newsletters">Newsletters</option>
                </select>
            </div>
        </div>

        <div id="menuIndex"></div>

        <div class="form-group row">
            <label class="col-2 col-form-label" for="post-title">标题</label>
            <div class="col-10">
                <input class="form-control" type="text" name="title" id="post-title" required>
            </div>
        </div>
        <div class="form-group row" id="form-group-poster">
            <label class="col-2 col-form-label" for="post-poster">Poster</label>
            <div class="col-3 ">
                <input type="file" name="post-poster" class="form-control-file" id="post-poster">
            </div>
            <input type="text" name="poster" id="post-poster-src" hidden>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label" for="post-file">正文:</label>
            <div class="col-3">
                <input type="file" name="postFile" class="form-control-file" id="post-file">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label" for="post-img">Insert</label>
            <div class="col-3 ">
                <input type="file" name="post-img" class="form-control-file" id="post-img">
            </div>
        </div>

        <div class="form-group">
            <textarea class="form-control" name="content" id="post-content" rows="10" required></textarea>
        </div>
        <button type="submit" class="btn btn-info">发表</button>
    </form>
</div>

<%- include('../components/footer') %>

<script src="/javascripts/lib/jquery.numberedtextarea.js"></script>
<script src="/javascripts/posts/create.js"></script>

<%- include('../components/script') %>