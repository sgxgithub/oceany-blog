    <div class="col-2 bg-faded">
        <%- include('menu') %>
    </div>
    <div class="col-10">
        <form method="post">
            <h4>Add Menu Item</h4>
            <input type="hidden" name="section" value=<%- section %>>
            <div class="form-group row" id="form-group-index">
                <label class="col-2 col-form-label" for="menu-index">Indexï¼š</label>
                <div class="col-10">
                    <input type="text" class="form-control" name="index" id="menu-index"
